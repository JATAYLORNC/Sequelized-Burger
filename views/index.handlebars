<div class="container-fluid">
    <div class="row mt-3">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-12 d-flex justify-content-center">
            <img src="/assets/img/burger.png" alt ="Cartoon image of a burger" class="ml-auto mr-auto"></img>
          </div>
        </div>
        <div class = "row">
          <div class="col-sm-12">
            <h1 class="text-danger text-center">EAT-DA-BURGER!</h1>
          <div class="col-sm-12"></div>
          </div>
      </div>
      <div class="col-sm-4"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-6 d-flex">
      <div class="card burgers_ready">
        <div class="card-header mb-3">
          <h2 class="text-center">Burgers Ready To Eat!</h2>
        </div>         
        <form class="w-100">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burger-block}}
            {{/unless}}
          {{/each}}
        </form>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="card w-100 burgers_devoured">
        <div class="card-header mb-3">
          <h2 class="text-center">Burgers Devoured!</h2>
        </div>
        <form>
          {{#each burgers}}
            {{#if devoured}}
              {{> burger-devoured-block}}
            {{/if}}
          {{/each}}
        </form>
      </div>
    </div>
    <div class="col-sm-1"></div>
  </div>
  <div class="row mt-3">
    <div class=col-sm-4></div>
    <div class=col-sm-4 d-flex justify-content-center>
      <form class="createburger">
        <div class="form-group">
          <textarea type="text" class="form-control" row="3" id="burger" name="burger"></textarea>
        </div>
        <div class="form-row text-center">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
      </form>
      <p class="text-center mt-3">Enter a burger you want to Eat! Click the "Submit" button.</p>
    </div>
    <div class=col-sm-4></div>
  </div>